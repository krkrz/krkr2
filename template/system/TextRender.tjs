						  "defaultFontSize",
						  "defaultChColor",
						  "defaultRubySize",
						  "defaultRubyOffset",
						  "defaultShadow",
						  "defaultShadowColor",
						  "defaultEdge",
						  "defaultEdgeColor",
						  "defaultLineSpacing",
						  "defaultPitch",
