				if (WaveSoundBuffer.enableGetSample) {
					var a = soundBuffer.sampleValue;
					//dm("ボイス値: "+soundBuffer.position+" : %0.3f".sprintf(a));
					if (a > 0.2) {
						voiceLevel = 2;
					} else if (a > 0.01) {
						voiceLevel = 1;
					} else {
						voiceLevel = 0;
					}
				} else {
					// とりあえずランダム対応
					voiceLevel = (int)(Math.random() * 3);
