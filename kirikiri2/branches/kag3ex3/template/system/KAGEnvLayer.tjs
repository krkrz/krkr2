    /**
	 * コマンドの実行
	 * @param cmd コマンド
	 * @param param パラメータ
	 * @param elm 他のコマンドも含む全パラメータ
     * @return 実行が行われた場合 true
     */
    function doCommand(cmd, param, elm) {

		// レイヤ共通コマンド
        var func;
		if ((func = _layerCommands[cmd]) !== void) {
            if (func != null) {
