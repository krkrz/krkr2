		flipFile = file;
		flipInfo = %[];
		(Dictionary.assign incontextof flipInfo)(elm);

		initPosAndShow(elm);
		var autoflag;
		if (file != "" && !elm.noflag && (autoflag = _genericFlipGetEntry(flipType, "autoflag")) != "") {
