	function blt(rad)
	{
		var rad2 = rad + Math.PI / 2;
		var rad3 = rad - Math.PI / 2;
		var xz = 200; //Math.cos(rad*0.45)*500+530;
		var yz = 200; //Math.sin(rad*0.56)*500+530;
